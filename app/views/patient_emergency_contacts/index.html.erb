<p id="notice"><%= notice %></p>

<h1>Patient Emergency Contacts</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Contact type</th>
      <th>Relationship</th>
      <th>Release of info</th>
      <th>Dob</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>Country</th>
      <th>Zipcode</th>
      <th>City</th>
      <th>State</th>
      <th>Email</th>
      <th>Mobile phone</th>
      <th>Work phone</th>
      <th>Home phone</th>
      <th>Other phone</th>
      <th>Commet</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient_emergency_contacts.each do |patient_emergency_contact| %>
      <tr>
        <td><%= patient_emergency_contact.first_name %></td>
        <td><%= patient_emergency_contact.last_name %></td>
        <td><%= patient_emergency_contact.contact_type %></td>
        <td><%= patient_emergency_contact.relationship %></td>
        <td><%= patient_emergency_contact.release_of_info %></td>
        <td><%= patient_emergency_contact.dob %></td>
        <td><%= patient_emergency_contact.address_1 %></td>
        <td><%= patient_emergency_contact.address_2 %></td>
        <td><%= patient_emergency_contact.country %></td>
        <td><%= patient_emergency_contact.zipcode %></td>
        <td><%= patient_emergency_contact.city %></td>
        <td><%= patient_emergency_contact.state %></td>
        <td><%= patient_emergency_contact.email %></td>
        <td><%= patient_emergency_contact.mobile_phone %></td>
        <td><%= patient_emergency_contact.work_phone %></td>
        <td><%= patient_emergency_contact.home_phone %></td>
        <td><%= patient_emergency_contact.other_phone %></td>
        <td><%= patient_emergency_contact.comment %></td>
        <td><%= patient_emergency_contact.patient %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
