<%= form_for([@progress_note.patient, @progress_note]) do |f| %>

   <div class="row">
      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Clinician:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.select 'user_id', @users.collect{|p| [p.first_name, p.id]}, { include_blank: true }, class:'form-control form-control-sm' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Patient:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <input type="text" name="" value="<%= @progress_note.patient.first_name%> <%= @progress_note.patient.last_name %>" class="form-control form-control-sm">
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Date:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
            <div class="col-sm-8">
               <%= f.date_field :date, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Time:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
            <div class="col-sm-8">
               <%= f.time_field :time, class:"form-control form-control-sm" %>
            </div>
         </div>

      </div>

      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Duration:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :duration, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Location:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.select :location, @location.collect{|l| [l, l]}, { include_blank: true }, class:'form-control form-control-sm' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Participants:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.select :participants, @participants.collect{|l| [l, l]}, { include_blank: true }, class:'form-control form-control-sm' %>
            </div>
         </div>

      </div>
   </div>

   <hr>

   <h5>Diagnosis:</h5>
   <div class="row">
      <div class="col-md-12">

         <div class="form-group">
            <%= f.text_field :diagnosis_description, class:'form-control form-control-sm', placeholder:'Description' %>
         </div>

         <div class="form-group">
            <%= f.text_area :diagnostic_justification, class:'form-control form-control-sm', rows:'2', placeholder:'Diagnostic justfication and/or assessment measures'  %>
         </div>

      </div>
   </div>

   <hr>

   <h5>Patient Presentation:</h5>
   <div class="row">

      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Cognitive Functioning:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :cognitive_functioning, class:'form-control form-control-sm', list:'options' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Affect:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :affect, class:'form-control form-control-sm', list:'options' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Mood:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :mood, class:'form-control form-control-sm', list:'options' %>
            </div>
         </div>

      </div>

      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Interpersonal:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :interpersonal, class:'form-control form-control-sm', list:'options' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Functional Status:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :functional_status, class:'form-control form-control-sm', list:'options' %>
            </div>
         </div>

      </div>
   </div>

   <hr>

   <h5>Safety Issues</h5>

   <div class="row">
      <div class="col-md-6">
         <div class="form-group row">
            <%= f.label 'Safety Issues:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :safety_issues, class:"form-control form-control-sm", list:'safety_issues' %>
               <datalist id="safety_issues">
                  <option value="None">
                  <option value="Suicidal Ideation">
                  <option value="Hommicidal Ideation">
               </datalist>
            </div>
         </div>
      </div>
   </div>

   <hr>

   <div class="row">
      <div class="col-md-12">
         <h5>Medications:</h5>
         <div class="form-group">
            <%= f.text_area :medications, class:'form-control form-control-sm', rows:'2' %>
         </div>
      </div>
   </div>

   <div class="row">
      <div class="col-md-12">
         <h5>Symptom Description and Subjective Report:</h5>
         <div class="form-group">
            <%= f.text_area :symptoms_description, class:'form-control form-control-sm', rows:'3' %>
         </div>
      </div>
   </div>

   <div class="row">
      <div class="col-md-12">
         <h5>Relevant Content:</h5>
         <div class="form-group">
            <%= f.text_area :relevant_content, class:'form-control form-control-sm', rows:'3', placeholder:'Objective information discussed during the session.' %>
         </div>
      </div>
   </div>

   <div class="row">
      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Interventions Used:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :interventions_used, class:'form-control form-control-sm', list:'options' %>
               <datalist id="options">
                  <option value="Appropiate">
                  <option value="Eccentric">
               </datalist>
            </div>
         </div>
      </div>
   </div>

   <hr>

   <h5>Treatment Plan Progress:</h5>
   <br>
   <div class="row">
      <div class="col-md-12">
         <h6>Additional Notes Regarding Goals and Objectives:</h6>
         <div class="form-group">
            <%= f.text_area :additional_notes, class:'form-control form-control-sm', rows:'2' %>
         </div>
      </div>
   </div>

   <div class="row">
      <div class="col-md-12">
         <h6>Plan:</h6>
         <div class="form-group">
            <%= f.text_area :plan, class:'form-control form-control-sm', rows:'2' %>
         </div>
      </div>
   </div>

   <div class="row">
      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Recommendation:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :recommendation, class:'form-control form-control-sm', list:'recommendation' %>
               <datalist id="recommendation">
                  <option value="Continue current therapeutic focus">
                  <option value="Change treatment goasl or objectives">
                  <option value="Terminate treatment">
               </datalist>
            </div>
         </div>
      </div>

      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Prescribed Frequency of Treatment:', class:"col-sm-6 col-form-label col-form-label-md"  %>
            <div class="col-sm-6">
               <%= f.text_field :treatment_frequency, class:'form-control form-control-sm', list:'frequency' %>
               <datalist id="frequency">
                  <option value="As needed">
                  <option value="Twice a week">
                  <option value="Weekly">
                  <option value="Once every two weeks">
                  <option value="Once a month">
               </datalist>
            </div>
         </div>
      </div>

   </div>

   <div class="row px-3">
      <div class="col-md-12 border bg-light bg-light p-2">
         <div class="form-check">
            <%= f.check_box :clinician_signature, class:'form-check-input' %>
            <label class="form-check-label"> Sign this Form: I, <%= current_user.first_name %> <%= current_user.last_name %>, Clinical Psychologist, declare this information to be accurate and complete.</label>
         </div>
      </div>
   </div>

   <br>

   <div class="actions">
      <% if @progress_note.new_record? %>
         <%= f.submit 'Create', class:'btn btn-outline-primary'%>
      <% else %>
         <%= f.submit 'Update', class:'btn btn-outline-primary'%>
      <% end %>
   </div>

<% end %>
