<h1>Progress Notes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Patient</th>
      <th>Date</th>
      <th>Time</th>
      <th>Duration</th>
      <th>Location</th>
      <th>Participants</th>
      <th>Diagnosis description</th>
      <th>Diagnostic justification</th>
      <th>Cognitive functioning</th>
      <th>Affect</th>
      <th>Mood</th>
      <th>Interpersonal</th>
      <th>Functional status</th>
      <th>Safety issues</th>
      <th>Medications</th>
      <th>Symptoms description</th>
      <th>Relevant content</th>
      <th>Interventions used</th>
      <th>Additional notes</th>
      <th>Plan</th>
      <th>Recommendation</th>
      <th>Treatment frequency</th>
      <th>Clinician signature</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @progress_notes.each do |progress_note| %>
      <tr>
        <td><%= progress_note.user %></td>
        <td><%= progress_note.patient %></td>
        <td><%= progress_note.date %></td>
        <td><%= progress_note.time %></td>
        <td><%= progress_note.duration %></td>
        <td><%= progress_note.location %></td>
        <td><%= progress_note.participants %></td>
        <td><%= progress_note.diagnosis_description %></td>
        <td><%= progress_note.diagnostic_justification %></td>
        <td><%= progress_note.cognitive_functioning %></td>
        <td><%= progress_note.affect %></td>
        <td><%= progress_note.mood %></td>
        <td><%= progress_note.interpersonal %></td>
        <td><%= progress_note.functional_status %></td>
        <td><%= progress_note.safety_issues %></td>
        <td><%= progress_note.medications %></td>
        <td><%= progress_note.symptoms_description %></td>
        <td><%= progress_note.relevant_content %></td>
        <td><%= progress_note.interventions_used %></td>
        <td><%= progress_note.additional_notes %></td>
        <td><%= progress_note.plan %></td>
        <td><%= progress_note.recommendation %></td>
        <td><%= progress_note.treatment_frequency %></td>
        <td><%= progress_note.clinician_signature %></td>
        <td><%= link_to 'Show', progress_note %></td>
        <td><%= link_to 'Edit', edit_progress_note_path(progress_note) %></td>
        <td><%= link_to 'Destroy', progress_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
