<%= form_with(model: patient, local: true, html: {autocomplete:'off'}) do |form| %>

   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <h5>Patient Comments</h5>
            <div class="form-group">
               <%= form.text_area :comment, class:'form-control', placeholder:'For non-clinical information.' %>
            </div>
         </div>
      </div>

      <div class="row">
         <div class="col-md-12">
            <h5>Patient Information</h5>
         </div>
      </div>

      <div class="row">
         <div class="col-md-6">

            <div class="form-group row">
               <%= form.label 'Name:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-4">
                  <%= form.text_field :first_name, class:"form-control form-control-sm", input_html: { autocomplete:'off' }, placeholder:'First' %>
               </div>
               <div class="col-sm-4">
                  <%= form.text_field :last_name, class:"form-control form-control-sm", placeholder:'Last' %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Preferred Name:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.text_field :preferred_name, class:"form-control form-control-sm" %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Date of Birth:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.date_field :dob, class:"form-control form-control-sm" %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Email Address:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.text_field :email, class:"form-control form-control-sm" %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Mobile Phone:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.text_field :mobile_phone, class:"form-control form-control-sm" %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Home Phone:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.text_field :home_phone, class:"form-control form-control-sm" %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Work Phone:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.text_field :work_phone, class:"form-control form-control-sm" %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Other Phone:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.text_field :other_phone, class:"form-control form-control-sm" %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Address 1:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.text_field :address_1, class:"form-control form-control-sm" %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Address 2:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.text_field :address_2, class:"form-control form-control-sm" %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'City:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.text_field :city, class:"form-control form-control-sm" %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'State/Zip:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-3">
                  <%= form.select :state, @states.collect{|p| [p,p]}, { include_blank: true }, class:'form-control form-control-sm' %>
               </div>
               <div class="col-sm-5">
                  <%= form.text_field :zipcode, class:"form-control form-control-sm" %>
               </div>
            </div>

         </div>

         <div class="col-md-6">

            <div class="form-group row">
               <%= form.label 'Birth Sex:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.select :birth_sex,['Male', 'Female', 'Other'],{ include_blank: true }, class:'form-control form-control-sm'  %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Gender Identity:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.select :gender_identity,['Select Gender Identity', 'Male', 'Female', 'Other'],{ include_blank: false }, class:'form-control form-control-sm'  %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Sexual Orientation:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.select :sexual_orientation,['Select Sexual Orientation', 'Straight or Heterosexual', 'Lesbian Gay or Homosexual', 'Bisexual'],{ include_blank: false }, class:'form-control form-control-sm'  %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Race:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.select :race,['Select Race'],{ include_blank: false }, class:'form-control form-control-sm'  %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Languages:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.text_field :languages, class:"form-control form-control-sm" %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Marital Status:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.text_field :marital_status, class:"form-control form-control-sm", autocomplete:'off' %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'Employment:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.text_field :employment, class:"form-control form-control-sm", autocomplete:'off' %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'HIPAA:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.check_box :hipaa, class:"form-control form-control-sm" %>
               </div>
            </div>

            <div class="form-group row">
               <%= form.label 'PCP Release:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
               <div class="col-sm-8">
                  <%= form.text_field :pcp_release, class:"form-control form-control-sm", autocomplete:'off' %>
               </div>
            </div>
         </div>
      </div>

      <hr>

      <div class="row">
         <div class="col-md-6">

            <div class="form-group row">
               <%= form.label 'Assigned Clinician:', class:"col-sm-4 col-form-label col-form-label-md"  %>
               <div class="col-sm-8">
                  <%= form.select 'user_id', @clinicians.collect{|c| c}, { include_blank: true }, class:'form-control form-control-sm' %>
               </div>
            </div>

            <br>

            <div class="actions">
               <%= form.submit class:'btn btn-primary' %>
            </div>
         </div>
      </div>

   </div>

<% end %>
