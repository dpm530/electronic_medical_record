<%= render "shared/navbar_signed_in"%>

<div class="container-fluid py-4">
   <div class="container-fluid mb-2">
      <div class="row">
         <div class="col-md-6">
            <h3>Patients</h3>
         </div>
         <div class="col-md-6">
            <%= link_to 'Create New Patient', new_patient_path, class:"btn btn-primary float-right" %>
         </div>
      </div>
   </div>
   <div class="container-fluid border bg-white py-4">
      <h5>Displaying all Patients</h5>
      <br>
      <table class="table table-bordered table-hover">
         <thead>
            <tr>
               <th>First Name</th>
               <th>Last Name</th>
               <th>Email</th>
               <th>Phone Number</th>
               <th>DOB</th>
               <th>Clinician</th>
            </tr>
         </thead>
         <tbody>
            <% @patients.each do |patient| %>
               <tr>
                  <td><%= patient.first_name %></td>
                  <td><%= patient.last_name %></td>
                  <td><%= patient.email %></td>
                  <td><%=  patient.mobile_phone %></td>
                  <td><%= patient.dob %></td>
                  <td><%= patient.user.first_name %> <%= patient.user.last_name %></td>
                  <td><%= link_to 'Show', patient %></td>
                  <!-- <td><%= link_to 'Edit', edit_patient_path(patient) %></td> -->
                  <td><%= link_to 'Delete', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
               </tr>
            <% end %>
         </tbody>
      </table>

   </div>
</div>
