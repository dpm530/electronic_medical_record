   <a href="/patients/<%= @patient.id %>/intake_notes/new" class="btn btn-primary">New Intake Note</a>
   <a href="/patients/<%= @patient.id %>/treatment_plans/new" class="btn btn-primary">New Treatment Plan</a>
   <a href="/patients/<%= @patient.id %>/termination_notes/new" class="btn btn-primary">New Termination Note</a>
