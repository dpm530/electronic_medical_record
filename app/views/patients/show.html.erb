<div class="container-fluid py-2">
   <div class="container-fluid bg-white border py-4">
      <div class="row">
         <div class="col-md-6">
            <h4>Patient Comments:</h4>
         </div>
         <div class="col-md-6">
            <%= link_to 'Edit', edit_patient_path(@patient), class:"btn btn-outline-primary float-right" %>
         </div>
      </div>
      <br>
      <div class="row">
         <div class="col-md-12">
            <p> <%= @patient.comment %> </p>
         </div>
      </div>
   </div>
</div>

<div class="container-fluid py-4">
   <div class="container-fluid mb-2 bg-white border py-4">
      <div class="row">
         <div class="col-md-6">
            <h4>Patient Information</h4>
         </div>
         <div class="col-md-6">
            <%= link_to 'Edit', edit_patient_path(@patient), class:"btn btn-outline-primary float-right" %>
         </div>
      </div>
      <div class="row">
         <div class="col-md-6">
            <table>
               <body>
                  <tr>
                     <td>Name:</td>
                     <td><%= @patient.first_name %> <%= @patient.last_name %></td>
                  </tr>
                  <tr>
                     <td>Preferred Name:</td>
                     <td><%= @patient.preferred_name %></td>
                  </tr>
                  <tr>
                     <td>Date of Birth:</td>
                     <td><%= @patient.dob %></td>
                  </tr>
                  <tr>
                     <td>Email Address:</td>
                     <td><%= @patient.email %></td>
                  </tr>
                  <tr>
                     <td>Mobile Phone:</td>
                     <td><%= @patient.mobile_phone %></td>
                  </tr>
                  <tr>
                     <td>Home Phone:</td>
                     <td><%= @patient.home_phone %></td>
                  </tr>
                  <tr>
                     <td>Work Phone:</td>
                     <td><%= @patient.work_phone %></td>
                  </tr>
                  <tr>
                     <td>Address:</td>
                     <td><%= @patient.address_1 %></td>
                  </tr>
               </body>
            </table>
         </div>
         <div class="col-md-6">
            <table>
               <body>
                  <tr>
                     <td>Birth Sex:</td>
                     <td><%= @patient.birth_sex %></td>
                  </tr>
                  <tr>
                     <td>Gender Identity:</td>
                     <td><%= @patient.gender_identity %></td>
                  </tr>
                  <tr>
                     <td>Sexual Orientation:</td>
                     <td><%= @patient.sexual_orientation %></td>
                  </tr>
                  <tr>
                     <td>Race:</td>
                     <td><%= @patient.race %></td>
                  </tr>
                  <tr>
                     <td>Languages:</td>
                     <td><%= @patient.languages %></td>
                  </tr>
                  <tr>
                     <td>Marital Status:</td>
                     <td><%= @patient.marital_status %></td>
                  </tr>
                  <tr>
                     <td>Employment:</td>
                     <td><%= @patient.employment %></td>
                  </tr>
                  <tr>
                     <td>HIPAA</td>
                     <td><%= @patient.hipaa %></td>
                  </tr>
                  <tr>
                     <td>PCP Release:</td>
                     <td><%= @patient.pcp_release %></td>
                  </tr>
               </body>
            </table>
         </div>
      </div>
   </div>

</div>

<div class="container-fluid py-4">
   <div class="container-fluid mb-2 bg-white border py-4">
      <div class="row">
         <div class="col-md-6">
            <h4>Emergency Contact:</h4>
         </div>
         <div class="col-md-6">
            <%= link_to 'New Emergency Contact', new_patient_patient_emergency_contact_path(@patient), class:"btn btn-outline-primary float-right" %>
         </div>
      </div>
      <hr>
      <% @emergency_contacts.each do |ec| %>
         <div class="row">
            <div class="col-md-6">
               <table>
                  <body>
                     <tr>
                        <td>Name:</td>
                        <td><%= ec.first_name %> <%= ec.last_name %></td>
                     </tr>
                     <tr>
                        <td>Contact Type:</td>
                        <td><%= ec.contact_type %></td>
                     </tr>
                     <tr>
                        <td>Relationship:</td>
                        <td><%= ec.relationship %></td>
                     </tr>
                     <tr>
                        <td>Release of Info:</td>
                        <td><%= ec.release_of_info %></td>
                     </tr>
                     <tr>
                        <td>Date of Birth:</td>
                        <td><%= ec.dob %></td>
                     </tr>
                     <tr>
                        <td>Address:</td>
                        <td><%= ec.address_1 %></td>
                     </tr>
                  </body>
               </table>
            </div>
            <div class="col-md-6">
               <table>
                  <body>
                     <tr>
                        <td>Email:</td>
                        <td><%= ec.email %></td>
                     </tr>
                     <tr>
                        <td>Mobile Phone:</td>
                        <td><%= ec.mobile_phone %></td>
                     </tr>
                     <tr>
                        <td>Home Phone:</td>
                        <td><%= ec.home_phone %></td>
                     </tr>
                     <tr>
                        <td>Work Phone:</td>
                        <td><%= ec.work_phone %></td>
                     </tr>
                     <tr>
                        <td>Other Phone:</td>
                        <td><%= ec.other_phone %></td>
                     </tr>
                     <tr>
                        <td>Comments:</td>
                        <td><%= ec.comment %></td>
                     </tr>
                  </body>
               </table>
            </div>
         </div>
         <br>
         <td><%= link_to 'Edit', edit_patient_patient_emergency_contact_path(ec.patient, ec), class:'btn btn-primary' %></td>
         <td><%= link_to 'Delete', [ec.patient, ec], :confirm => 'Are you sure?', :method => :delete, class:'btn btn-primary' %></td>
         <hr>
      <% end %>
   </div>

</div>
