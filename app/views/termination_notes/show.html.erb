<div class="container-fluid py-2">
   <div class="container-fluid bg-white border py-4">

      <div class="row">
         <div class="col-md-6">
            <h5>Psychotherapy Termination Note</h5>
         </div>
         <div class="col-md-6">
            <% if admin_role? || (@termination_note.clinician_signature == false)%>
            <%= link_to 'Edit', edit_patient_termination_note_path(@termination_note.patient, @termination_note), class:'float-right btn btn-outline-primary' %>
            <% end %>
         </div>
      </div>

      <hr>

      <div class="row">
         <div class="col-md-6">

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Clinician:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p><%= @termination_note.user.first_name %> <%= @termination_note.user.last_name %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Patient:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p><%= @termination_note.patient.first_name %> <%= @termination_note.patient.last_name %></p>
               </div>
            </div>
         </div>

         <div class="col-md-6">

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Date:</strong></p>
               </div>
               <div class="col-sm-8">
                  <% if @termination_note.date%>
                     <p><%= @termination_note.date.strftime("%D") %></p>
                  <% end %>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Time:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p><%= @termination_note.time %></p>
               </div>
            </div>

         </div>
      </div>

      <hr>

      <h5>Reason for Termination</h5>
      <div class="row">
         <div class="col-md-12">
            <%= @termination_note.reason %>
         </div>
      </div>

      <hr>

      <h5>Chief Complaint</h5>
      <div class="row">
         <div class="col-md-12">
            <%= @termination_note.main_complaint %>
         </div>
      </div>

      <hr>

      <h5>Most Recent Diagnosis</h5>
      <div class="row">
         <div class="col-md-8">

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Diagnosis Description:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p><%= @termination_note.most_recent_diagnosis %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Diagnostic Justification:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @termination_note.recent_diagnosis_justification %></p>
               </div>
            </div>

         </div>
      </div>

      <hr>

      <h5>Treatment Modality and Interventions</h5>
      <div class="row">
         <div class="col-md-12">
            <%= @termination_note.treatment_modality %>
         </div>
      </div>

      <hr>

      <h5>Treatment Goals and Outcome</h5>
      <div class="row">
         <div class="col-md-12">
            <%= @termination_note.treatment_goals %>
         </div>
      </div>

      <br>

      <div class="row">
         <div class="col-md-12">
            <% if @termination_note.clinician_signature == true %>
               <p><%= @termination_note.user.first_name %> <%= @termination_note.user.last_name %>, signed this note and declared this information to be accurate and complete on <%= @termination_note.created_at.strftime('%D') %>.</p>
            <% else %>
               <p>This note requires the authors signature.</p>
            <% end %>
         </div>
      </div>

   </div>
</div>
