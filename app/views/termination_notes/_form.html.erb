<%= form_for([@termination_note.patient, @termination_note]) do |f| %>


   <div class="row">
      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Clinician:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.select 'user_id', @users.collect{|p| [p.first_name, p.id]}, { include_blank: true }, class:'form-control form-control-sm' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Patient:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <input type="text" name="" value="<%= @termination_note.patient.first_name%> <%= @termination_note.patient.last_name %>" class="form-control form-control-sm">
            </div>
         </div>

      </div>
      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Date:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
            <div class="col-sm-8">
               <%= f.date_field :date, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Time:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
            <div class="col-sm-8">
               <%= f.time_field :time, class:"form-control form-control-sm" %>
            </div>
         </div>

      </div>
   </div>

   <hr>

   <h5>Reason for Termination:</h5>
   <div class="row">
      <div class="col-md-12">

         <div class="form-group">
            <%= f.text_field :reason, class:'form-control form-control-sm' %>
         </div>

      </div>
   </div>

   <h5>Chief Complaint:</h5>
   <div class="row">
      <div class="col-md-12">

         <div class="form-group">
            <%= f.text_area :main_complaint, class:'form-control form-control-sm', rows:'2' %>
         </div>

      </div>
   </div>

   <h5>Most Recent Diagnosis:</h5>
   <div class="row">
      <div class="col-md-12">

         <div class="form-group">
            <%= f.text_field :most_recent_diagnosis, class:'form-control form-control-sm', placeholder:'Description' %>
         </div>

         <div class="form-group">
            <%= f.text_area :recent_diagnosis_justification, class:'form-control form-control-sm', rows:'2', placeholder:'Diagnostic justfication and/or assessment measures'  %>
         </div>

      </div>
   </div>

   <h5>Treatment Modality and Interventions:</h5>
   <div class="row">
      <div class="col-md-12">

         <div class="form-group">
            <%= f.text_area :treatment_modality, class:'form-control form-control-sm', rows:'3' %>
         </div>

      </div>
   </div>

   <h5>Treatment Goals and Outcome:</h5>
   <div class="row">
      <div class="col-md-12">

         <div class="form-group">
            <%= f.text_area :treatment_goals, class:'form-control form-control-sm', rows:'3' %>
         </div>

      </div>
   </div>

   <div class="row px-3">
      <div class="col-md-12 border bg-light bg-light p-2">
         <div class="form-check">
            <%= f.check_box :clinician_signature, class:'form-check-input' %>
            <label class="form-check-label"> Sign this Form: I, <%= current_user.first_name %> <%= current_user.last_name %>, Clinical Psychologist, declare this information to be accurate and complete.</label>
         </div>
      </div>
   </div>

   <br>

   <div class="actions">
      <% if @termination_note.new_record? %>
         <%= f.submit 'Create', class:'btn btn-outline-primary'%>
      <% else %>
         <%= f.submit 'Update', class:'btn btn-outline-primary'%>
      <% end %>
   </div>


<% end %>
