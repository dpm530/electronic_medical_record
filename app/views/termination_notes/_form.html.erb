<%= form_for([@termination_note.patient, @termination_note]) do |f| %>

   <div class="field">
      <%= f.label('Clinician') %>
      <%= f.select('user_id', @users.collect{|p| [p.first_name, p.id]}, { include_blank: true }) %>
   </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label :time %>
    <%= f.time_select :time %>
  </div>

  <div class="field">
    <%= f.label :reason %>
    <%= f.text_field :reason %>
  </div>

  <div class="field">
    <%= f.label :main_complaint %>
    <%= f.text_area :main_complaint %>
  </div>

  <div class="field">
    <%= f.label :most_recent_diagnosis %>
    <%= f.text_field :most_recent_diagnosis %>
  </div>

  <div class="field">
    <%= f.label :recent_diagnosis_justification %>
    <%= f.text_area :recent_diagnosis_justification %>
  </div>

  <div class="field">
    <%= f.label :treatment_modality %>
    <%= f.text_area :treatment_modality %>
  </div>

  <div class="field">
    <%= f.label :treatment_goals %>
    <%= f.text_area :treatment_goals %>
  </div>

  <div class="field">
    <%= f.label :clinician_signature %>
    <%= f.check_box :clinician_signature %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
