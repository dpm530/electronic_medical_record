<%= render 'shared/navbar_signed_in' %>

<div class="container-fluid py-2">
   <div class="container-fluid bg-white border py-4">
      <div class="row">
         <div class="col-md-6">
            <h4>Profile:</h4>
         </div>
         <div class="col-md-6">
            <a href="/" class="btn btn-outline-secondary float-right">Edit</a>
         </div>
      </div>
      <br>
      <div class="row">
         <div class="col-md-6">
            <% if @user_contact_information %>
               <p> <%= @user_contact_information.address_1 %> </p>
               <p> <%= @user_contact_information.address_2 %> </p>
               <p> <%= @user_contact_information.city %>, <%= @user_contact_information.state %>, <%= @user_contact_information.zipcode %> </p>
               <%= link_to 'Edit', edit_user_contact_information_path(@user_contact_information) %> |
               <%= link_to 'Delete', @user_contact_information, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% else %>
               <%= link_to 'Add Contact Information', new_user_contact_information_path %>
            <% end %>
         </div>
      </div>
   </div>
</div>
