<%= render "shared/navbar_signed_in"%>

<div class="container-fluid py-4">
   <div class="container-fluid mb-2">
      <div class="row">
         <div class="col-md-6">
            <h3>Library</h3>
         </div>
         <div class="col-md-6">
            <% if admin_role? %>
               <%= link_to '<i class="fas fa-cloud-upload-alt"></i> Upload File'.html_safe, new_library_path, class:"btn btn-primary float-right" %>
            <% end %>
         </div>
      </div>
   </div>
   <div class="container-fluid border bg-white py-4">
      <div class="container-fluid">
         <h5>Use the Library to store and share documents within your practice, such as blank forms, agreements, and handouts.</h5>
      </div>

      <br>

      <div class="container-fluid">
         <div class="row">
            <div class="col-md-12">

               <table class="table text-center">
                  <thead>
                     <tr>
                        <th>Document Name</th>
                        <th>Date</th>
                        <th  class="text-center">Actions</th>
                     </tr>
                  </thead>
                  <tbody>
                     <% @libraries.each do |l| %>
                        <tr>
                           <td><a href="<%= (l.library_document[0]).to_s %>" target='_blank'><%= l.name %></a></td>
                           <td>
                              <%= l.created_at.strftime('%D') %>
                           </td>
                           <td >
                              <a class='btn btn-outline-primary btn-sm' href="<%= (l.library_document[0]).to_s %>" target='_blank'> <i class="fas fa-download"></i></a>
                              <% if admin_role? %>
                                 <%= link_to '<i class="fas fa-edit"></i> '.html_safe, edit_library_path(l), class:'btn btn-outline-primary btn-sm' %>
                                 <%= link_to '<i class="fas fa-trash"></i>'.html_safe, l, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-primary btn-sm' %>
                              <% end %>
                           </td>

                        </tr>
                     <% end %>
                  </tbody>
               </table>
            </div>

         </div>
      </div>


   </div>
</div>
