<%= render "shared/navbar_signed_in"%>

<div class="container-fluid py-4">
   <div class="container-fluid mb-2">
      <div class="row">
         <div class="col-md-6">
            <h3>Library</h3>
         </div>
         <div class="col-md-6">
            <% if admin_role? %>
               <%= link_to '<i class="fas fa-cloud-upload-alt"></i> Upload File'.html_safe, new_library_path, class:"btn btn-info float-right" %>
            <% end %>
         </div>
      </div>
   </div>
   <div class="container-fluid border bg-white py-4">
      <div class="container-fluid">
         <h5>Use the Library to store and share documents within your practice, such as blank forms, agreements, and handouts.</h5>
      </div>

      <br>

      <div class="container-fluid">
         <div class="row">
            <div class="col-md-12">

               <table class="table table-bordered table-hover text-center table-sm">
                  <thead class="thead-light">
                     <tr>
                        <th>Document Name</th>
                        <th>Date</th>
                        <th colspan="3">Actions</th>
                     </tr>
                  </thead>
                  <tbody>
                     <% @libraries.each do |l| %>
                        <tr>
                           <td><a class="text-info" href="<%= (l.library_document[0]).to_s %>" target='_blank'><%= l.name %></a></td>
                           <td>
                              <%= l.created_at.strftime('%D') %>
                           </td>
                           <td >
                              <a class='btn btn-outline-info btn-sm' href="<%= (l.library_document[0]).to_s %>" target='_blank'> <i class="fas fa-download"></i> Download</a>
                           </td>
                           <% if admin_role? %>
                              <td><%= link_to '<i class="fas fa-edit"></i> Edit'.html_safe, edit_library_path(l), class:'btn btn-outline-info btn-sm' %></td>
                              <td><%= link_to '<i class="fas fa-trash"></i> Delete'.html_safe, l, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-info btn-sm' %></td>
                           <% end %>

                        </tr>
                     <% end %>
                  </tbody>
               </table>
            </div>

         </div>
      </div>


   </div>
</div>
