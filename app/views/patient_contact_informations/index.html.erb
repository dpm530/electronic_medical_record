<p id="notice"><%= notice %></p>

<h1>Patient Contact Informations</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Mobile phone</th>
      <th>Home phone</th>
      <th>Work phone</th>
      <th>Other phone</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>Zipcode</th>
      <th>City</th>
      <th>State</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient_contact_informations.each do |patient_contact_information| %>
      <tr>
        <td><%= patient_contact_information.email %></td>
        <td><%= patient_contact_information.mobile_phone %></td>
        <td><%= patient_contact_information.home_phone %></td>
        <td><%= patient_contact_information.work_phone %></td>
        <td><%= patient_contact_information.other_phone %></td>
        <td><%= patient_contact_information.address_1 %></td>
        <td><%= patient_contact_information.address_2 %></td>
        <td><%= patient_contact_information.zipcode %></td>
        <td><%= patient_contact_information.city %></td>
        <td><%= patient_contact_information.state %></td>
        <td><%= patient_contact_information.patient %></td>
        <td><%= link_to 'Show', patient_contact_information %></td>
        <td><%= link_to 'Edit', edit_patient_contact_information_path(patient_contact_information) %></td>
        <td><%= link_to 'Destroy', patient_contact_information, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

