<%= render "shared/navbar_signed_in"%>

<div class="container py-4">
   <div class="row">
      <div class="col-md-8 mx-auto border bg-white py-4">

         <div class="row">
            <div class="col-md-12 text-center">
               <h3>Edit User</h3>
            </div>
         </div>

         <br>

         <div class="row">
            <div class="col-md-12">
               <div class="container">
                  <form  action="/users/<%= @user.id %>" method="post" >
                     <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                     <input type="hidden" name="_method" value="patch">

                     <div class="form-group row">
                        <label class="col-sm-2 col-form-label">First Name:</label>
                        <div class="col-sm-10">
                           <input type="text" name="user[first_name]" class="form-control" value="<%= @user.first_name %>">
                        </div>
                     </div>

                     <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Last Name:</label>
                        <div class="col-sm-10">
                           <input type="text" name="user[last_name]" class="form-control" value="<%= @user.last_name %>">
                        </div>
                     </div>
                     <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Email:</label>
                        <div class="col-sm-10">
                           <input type="email" class="form-control" value="<%= @user.email %>" name="user[email]" >
                        </div>
                     </div>
                     <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Password:</label>
                        <div class="col-sm-10">
                           <input type="password"  class="form-control" value="<%= @user.password %>" name="user[password]" >
                        </div>
                     </div>
                     <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Password Confirmation:</label>
                        <div class="col-sm-10">
                        <input type="password" name="user[password_confirmation]"  value="<%= @user.password_confirmation %>" class="form-control">
                        </div>
                     </div>

                     <div class="row">
                        <div class="col-md-4 mx-auto">
                           <button class="btn btn-primary btn-block text-uppercase" type="submit">Edit</button>
                        </div>
                     </div>

                  </form>

               </div>
            </div>
         </div>
      </div>
   </div>

</div>
