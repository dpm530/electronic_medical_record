<%= form_for([@intake_note.patient, @intake_note]) do |f| %>

   <div class="row">
      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Clinician:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.select 'user_id', @users.collect{|p| [p.first_name, p.id]}, { include_blank: true }, class:'form-control form-control-sm' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Patient:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <input type="text" name="" value="<%= @intake_note.patient.first_name%> <%= @intake_note.patient.last_name %>" class="form-control form-control-sm">
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Date:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
            <div class="col-sm-8">
               <%= f.date_field :date, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Time:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
            <div class="col-sm-8">
               <%= f.time_field :time, class:"form-control form-control-sm" %>
            </div>
         </div>

      </div>

      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Duration:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :duration, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Location:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.select :location, @location.collect{|l| [l, l]}, { include_blank: true }, class:'form-control form-control-sm' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Participants:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.select :participants, @participants.collect{|l| [l, l]}, { include_blank: true }, class:'form-control form-control-sm' %>
            </div>
         </div>

      </div>
   </div>

   <hr>

   <div class="row">
      <div class="col-md-12">
         <h5>Presenting Problem</h5>
         <div class="form-group">
            <%= f.text_area :presenting_problems, class:'form-control' %>
         </div>
      </div>
   </div>

   <hr>

   <h5>Current Mental Status</h5>

   <div class="row">
      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Genral Apprearance:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :general_appearance, class:"form-control form-control-sm" %>
            </div>
         </div>

         <!-- <div class="input-group mb-3 input-group-sm">
            <div class="input-group-prepend">
               <span class="input-group-text">General Appearance:</span>
            </div>
            <%= f.text_field :general_appearance, class:'form-control', list:'options1' %>
            <datalist id="options1">
               <option value="Appropiate">
               <option value="Disheveled">
               <option value="Emaciated">
               <option value="Obese">
               <option value="Poor Hygiene">
               <option value="Not Assessed">
            </datalist>
         </div> -->

         <div class="form-group row">
            <%= f.label 'Dress:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :dress, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Motor Activity:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :motor_activity, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Insight:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :insight, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Judgement:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :judgement, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Affect:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :affect, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Mood:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :mood, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Orientation:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :orientation, class:"form-control form-control-sm" %>
            </div>
         </div>

      </div>

      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Memory:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :memory, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Attention/Concentration:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :attention_concentration, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Thought Content:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :thought_content, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Perception:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :perception, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Flow of Thought:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :flow_of_thought, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Interview Behavior:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :interview_behavior, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Speech:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :speech, class:"form-control form-control-sm" %>
            </div>
         </div>

      </div>
   </div>

   <hr>

   <h5>Safety Issues</h5>

   <div class="row">
      <div class="col-md-6">
         <div class="form-group row">
            <%= f.label 'Safety Issues:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :safety_issues, class:"form-control form-control-sm", list:'safety_issues' %>
               <datalist id="safety_issues">
                  <option value="None">
                  <option value="Suicidal Ideation">
                  <option value="Hommicidal Ideation">
               </datalist>
            </div>
         </div>
      </div>
   </div>

   <hr>

   <h5>Background Information</h5>
   <br>
   <div class="row">
      <div class="col-md-12">

         <div class="form-group row">
            <%= f.label 'Identification:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :identification, class:'form-control form-control-sm', rows:'2', placeholder:'age, ethnicity, religion, marital status, referral status, etc.' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'History of Present Problem:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :history_present_problem, class:'form-control form-control-sm', rows:'2', placeholder:'symptoms, onset, duration, frequency, etc.' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Past Psychiatric History:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :past_psychiatric_history, class:'form-control form-control-sm', rows:'2', placeholder:'prior treatment, symptoms, diagnoses, hospitalization, suicide attempts, violent history, etc.' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Trauma History:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :trauma_history, class:'form-control', rows:'2', placeholder:'nature of trauma, when ocurred, persons involved, etc.' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Family Psychiatric History:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :family_psychiatric_history, class:'form-control form-control-sm', rows:'2' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Medical History:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :medical_history, class:'form-control form-control-sm', rows:'2' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Current Medications:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :current_medications, class:'form-control form-control-sm', rows:'2' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Substance Use:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :substance_use, class:'form-control form-control-sm', rows:'2' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Family History:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :family_history, class:'form-control form-control-sm', rows:'2' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Social History:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :social_history, class:'form-control form-control-sm', rows:'2' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Development History:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :development_history, class:'form-control form-control-sm', rows:'2' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Educational/Occupatinal History:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :educational_occupational_history, class:'form-control form-control-sm', rows:'2' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Legal History:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :legal_history, class:'form-control form-control-sm', rows:'2' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Strength/Limitations:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :strength_limitations, class:'form-control form-control-sm', rows:'2' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Other Information:', class:"col-sm-2 col-form-label col-form-label-md"  %>
            <div class="col-sm-10">
               <%= f.text_area :other_information, class:'form-control form-control-sm', rows:'2' %>
            </div>
         </div>

      </div>
   </div>

   <hr>

   <h5>Diagnosis</h5>
   <div class="row">
      <div class="col-md-12">

         <div class="form-group">
            <%= f.text_field :diagnosis_description, class:'form-control form-control-sm', placeholder:'Description' %>
         </div>

         <div class="form-group">
            <%= f.text_area :diagnosis_justification, class:'form-control form-control-sm', rows:'2', placeholder:'Diagnostic justfication and/or assessment measures'  %>
         </div>

      </div>
   </div>

   <div class="row px-3">
      <div class="col-md-12 border bg-light bg-light p-2">
         <div class="form-check">
            <%= f.check_box :clinician_signature, class:'form-check-input' %>
            <label class="form-check-label"> Sign this Form: I, <%= current_user.first_name %> <%= current_user.last_name %>, Clinical Psychologist, declare this information to be accurate and complete.</label>
         </div>
      </div>
   </div>

   <br>

   <div class="actions">
      <% if @intake_note.new_record? %>
         <%= f.submit 'Create', class:'btn btn-outline-primary'%>
      <% else %>
         <%= f.submit 'Update', class:'btn btn-outline-primary'%>
      <% end %>
   </div>


<% end %>
