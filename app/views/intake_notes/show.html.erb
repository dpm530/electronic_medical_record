<div class="container-fluid py-2">
   <div class="container-fluid bg-white border py-4">

      <div class="row">
         <div class="col-md-6">
            <h5>Psychotherapy Intake Note</h5>
         </div>
         <div class="col-md-6">
            <%= link_to 'Edit', edit_patient_intake_note_path(@intake_note.patient, @intake_note), class:'float-right btn btn-outline-primary' %>
         </div>
      </div>

      <hr>

      <div class="row">
         <div class="col-md-6">

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Clinician:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p><%= @intake_note.user.first_name %> <%= @intake_note.user.last_name %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Patient:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p><%= @intake_note.patient.first_name %> <%= @intake_note.patient.last_name %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Date:</strong></p>
               </div>
               <div class="col-sm-8">
                  <% if @intake_note.date%>
                     <p><%= @intake_note.date.strftime("%D") %></p>
                  <% end %>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Time:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p><%= @intake_note.time %></p>
               </div>
            </div>

         </div>
         <div class="col-md-6">

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Duration:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p><%= @intake_note.duration %> minutes</p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Location:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p><%= @intake_note.location %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Participants:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p><%= @intake_note.participants %></p>
               </div>
            </div>
         </div>
      </div>

      <hr>

      <div class="row">
         <div class="col-md-12">
            <h5>Presenting Problem</h5>
            <p><%= @intake_note.presenting_problems %></p>
         </div>
      </div>

      <hr>

      <h5>Current Mental Status</h5>
      <div class="row">
         <div class="col-md-6">

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>General appearance:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.general_appearance %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Dress:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.dress %></p>
               </div>
            </div>
            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Motor Activity</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.motor_activity %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Insight:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.insight %></p>
               </div>
            </div>
            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Judgement:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.judgement %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Affect:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.affect %></p>
               </div>
            </div>
            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Mood:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.mood %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Orientation:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.orientation %></p>
               </div>
            </div>

         </div>

         <div class="col-md-6">

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Memory:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.memory %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Attention/Concentration:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.attention_concentration %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Thought Content:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.thought_content %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Perception:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.perception %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Flow of Thought:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.flow_of_thought %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Interview Behavior:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.interview_behavior %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Speech:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.speech %></p>
               </div>
            </div>

         </div>

      </div>

      <hr>

      <h5>Safety Issues</h5>
      <div class="row">
         <div class="col-md-6">
            <p><%= @intake_note.safety_issues %></p>
         </div>
      </div>

      <hr>

      <h5>Background Information</h5>
      <div class="row">
         <div class="col-md-12">

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Identification:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.identification %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>History of Present Problem:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.history_present_problem %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Past Psychiatric History:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.past_psychiatric_history %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Trauma History:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.trauma_history %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Family Psychiatric History:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.family_psychiatric_history %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Medical History:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.medical_history %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Current Medications:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.current_medications %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Substance Use:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.substance_use %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Family History:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.family_history %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Social History:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.social_history %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Development History:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.development_history %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Educational/Ocupational History:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.educational_occupational_history %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Legal History:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.legal_history %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Strenght/Limitations:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.strength_limitations %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Other Information:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p class="border p-2"> <%= @intake_note.other_information %></p>
               </div>
            </div>

         </div>
      </div>

      <hr>

      <h5>Diagnosis</h5>
      <div class="row">
         <div class="col-md-6">

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Description:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.diagnosis_description %></p>
               </div>
            </div>

            <div class="row">
               <div class="col-sm-4">
                  <p><strong>Justification:</strong></p>
               </div>
               <div class="col-sm-8">
                  <p> <%= @intake_note.diagnosis_justification %></p>
               </div>
            </div>

         </div>
      </div>

      <br>

      <div class="row">
         <div class="col-md-12">
            <% if @intake_note.clinician_signature == true %>
               <p><%= @intake_note.user.first_name %> <%= @intake_note.user.last_name %>, signed this note and declared this information to be accurate and complete on <%= @intake_note.created_at.strftime('%D') %>.</p>
            <% else %>
               <p>This note requires the authors signature.</p>
            <% end %>
         </div>
      </div>


   </div>
</div>
