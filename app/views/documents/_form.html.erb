<%= form_for([@document.patient, @document], :html => {multipart: true}) do |f| %>

   <div class="container-fluid">

      <div class="form-group row">
         <%= f.label 'Patient:', class:"col-sm-4 col-form-label col-form-label-md"  %>
         <div class="col-sm-8">
            <input type="text" name="" placeholder="<%= @document.patient.first_name%> <%= @document.patient.last_name %>" class="form-control form-control-sm">
         </div>
      </div>

      <div class="form-group row">
         <%= f.label 'Clinician:', class:"col-sm-4 col-form-label col-form-label-md"  %>
         <div class="col-sm-8">
            <%= f.select :user_id, @users.collect{|p| [p.first_name, p.id]}, { include_blank: true }, class:'form-control form-control-sm'%>
         </div>
      </div>

      <div class="form-group row">
         <%= f.label 'Document Name:', class:"col-sm-4 col-form-label col-form-label-md"  %>
         <div class="col-sm-8">
            <%= f.text_field :name, class:'form-control form-control-sm' %>
         </div>
      </div>

      <div class="form-group row">
         <%= f.label 'File:', class:"col-sm-4 col-form-label col-form-label-md"  %>
         <div class="col-sm-8">
            <%= f.file_field :file, class:'form-control form-control-sm', multiple: true %>
         </div>
      </div>

      <div class="actions">
         <% if @document.new_record? %>
            <%= f.submit 'Create', class:'btn btn-outline-primary'%>
         <% else %>
            <%= f.submit 'Update', class:'btn btn-outline-primary'%>
         <% end %>
      </div>

   </div>



<% end %>
