<div class="container-fluid py-2">
   <div class="container-fluid bg-white border py-4">
      <div class="row">
         <div class="col-md-6">
            <h4>Files for this Patient:</h4>
         </div>
         <div class="col-md-6">
            <%= link_to '<i class="fas fa-cloud-upload-alt"></i> Upload Patient Files'.html_safe, new_patient_document_path(@patient), class:"btn btn-outline-primary float-right" %>
         </div>
      </div>
      <br>
      <div class="row">
         <div class="col-md-12">
            <table class="table table-bordered table-hover">
               <thead>
                  <tr>
                     <th>Document Name</th>
                     <th>Date</th>
                     <th>Author</th>
                     <th>Actions</th>
                  </tr>
               </thead>
               <tbody>
                  <% @documents.each do |document| %>
                     <tr>
                        <td><a href="<%= (document.file[0]).to_s %>" target='_blank'><%= document.name %></a></td>
                        <td><%= document.created_at.strftime('%D') %></td>
                        <td><a href="/practice/<%= document.user.id %>"><%= document.user.first_name %> <%= document.user.last_name %></a></td>
                        <td>
                           <a class='btn btn-outline-primary btn-sm' href="<%= (document.file[0]).to_s %>" target='_blank'><i class="fas fa-download"></i></a>
                           <%= link_to '<i class="fas fa-edit"></i> '.html_safe, edit_patient_document_path(document.patient, document), class:'btn btn-outline-primary btn-sm' %>
                           <%= link_to '<i class="fas fa-trash"></i>'.html_safe, [document.patient, document], method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-primary btn-sm' %>
                        </td>

                     </tr>
                  <% end %>
               </tbody>
            </table>
         </div>
      </div>
   </div>
</div>
