<%= form_for([@treatment_plan.patient, @treatment_plan]) do |f| %>

   <div class="row">
      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Clinician:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.select 'user_id', @users.collect{|p| [p.first_name, p.id]}, { include_blank: true }, class:'form-control form-control-sm' %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Patient:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <input type="text" name="" value="<%= @treatment_plan.patient.first_name%> <%= @treatment_plan.patient.last_name %>" class="form-control form-control-sm">
            </div>
         </div>

      </div>
      <div class="col-md-6">

         <div class="form-group row">
            <%= f.label 'Date:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
            <div class="col-sm-8">
               <%= f.date_field :date, class:"form-control form-control-sm" %>
            </div>
         </div>

         <div class="form-group row">
            <%= f.label 'Time:', class:"col-sm-4 col-form-label col-form-label-sm"  %>
            <div class="col-sm-8">
               <%= f.time_field :time, class:"form-control form-control-sm" %>
            </div>
         </div>

      </div>
   </div>

   <hr>

   <h5>Diagnosis:</h5>
   <div class="row">
      <div class="col-md-12">

         <div class="form-group">
            <%= f.text_field :diagnosis_description, class:'form-control form-control-sm', placeholder:'Description' %>
         </div>

         <div class="form-group">
            <%= f.text_area :diagnostic_justification, class:'form-control form-control-sm', rows:'2', placeholder:'Diagnostic justfication and/or assessment measures'  %>
         </div>

      </div>
   </div>

   <div class="row">
      <div class="col-md-12">
         <h5>Presenting Problem:</h5>
         <div class="form-group">
            <%= f.text_area :presenting_problem, class:'form-control form-control-sm' %>
         </div>
      </div>
   </div>

   <div class="row">
      <div class="col-md-12">
         <h5>Treatment Goals:</h5>
         <div class="form-group">
            <%= f.text_area :treatment_goal, class:'form-control form-control-sm' %>
         </div>
      </div>
   </div>

   <div class="row">
      <div class="col-md-7">
         <div class="form-group row">
            <%= f.label 'Estimated Completion Time:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.select :goal_estimated_completion,['1 month', '2 months', '3 months'],{ include_blank: true }, class:'form-control form-control-sm'  %>
            </div>
         </div>
      </div>
   </div>

   <div class="row">
      <div class="col-md-12">
         <h5>Objective:</h5>
         <div class="form-group">
            <%= f.text_area :objective, class:'form-control form-control-sm' %>
         </div>
      </div>
   </div>

   <div class="row">
      <div class="col-md-8">
         <div class="form-group row">
            <%= f.label 'Treatment Strategy/Interventions:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :treatment_strategy, class:'form-control form-control-sm' %>
            </div>
         </div>
      </div>
   </div>

   <div class="row">
      <div class="col-md-8">
         <div class="form-group row">
            <%= f.label 'Estimated Completion:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.select :objective_estimated_completion,['1 month', '2 months', '3 months'],{ include_blank: true }, class:'form-control form-control-sm'  %>
            </div>
         </div>
      </div>
   </div>

   <h5>Frequency of Treatment:</h5>

   <div class="row">
      <div class="col-md-8">
         <div class="form-group row">
            <%= f.label 'Prescribed Frequency of Treatment:', class:"col-sm-4 col-form-label col-form-label-md"  %>
            <div class="col-sm-8">
               <%= f.text_field :treatment_frequency, class:'form-control form-control-sm' %>
            </div>
         </div>
      </div>
   </div>

   <div class="row">
      <div class="col-md-12">
         <div class="form-check">
            <%= f.check_box :clinician_declaration, class:'form-check-input' %>
            <label for="intake_note[clinician_signature]">I declare that these services are medically necessary and appropriate to the recipient's diagnosis and needs.</label>
         </div>
      </div>
   </div>

   <div class="row">
      <div class="col-md-12">
         <div class="form-check">
            <%= f.check_box :clinician_signature, class:'form-check-input' %>
            <label class="form-check-label"> Sign this Form: I, <%= current_user.first_name %> <%= current_user.last_name %>, Clinical Psychologist, declare this information to be accurate and complete.</label>
         </div>
      </div>
   </div>

   <br>

   <div class="actions">
     <%= f.submit 'Create', class:'btn btn-outline-primary' %>
   </div>


<% end %>
